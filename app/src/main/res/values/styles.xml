<resources>

    <!-- Main themes -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryAlt">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="invWhite">@color/white</item>
        <item name="invWhite_dark">@color/white</item>
        <item name="invBlack">@color/black</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#D1D1D3</item>
        <item name="colorPrimaryDark">#B1B1B3</item>
        <item name="colorAccent">#009688</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="invWhite_dark">@color/black</item>
    </style>

    <!-- Dark theme has to be a PITA as always -->

    <style name="AppTheme.Dark">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryAlt">@color/white</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FFA726</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:actionModeBackground">@color/black</item>
        <item name="android:popupMenuStyle">@style/DarkMenu</item>
        <item name="android:alertDialogStyle">@style/DarkDialog</item>
        <item name="android:alertDialogTheme">@style/DarkDialog</item>
        <item name="android:dialogTheme">@style/DarkDialog</item>
        <item name="android:itemBackground">#0E0E0E</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="alertDialogTheme">@style/DarkDialog</item>
        <item name="invWhite">@color/black</item>
        <item name="invBlack">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="DarkPreferenceFragment" parent="PreferenceFragment">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#212121</item>
    </style>

    <style name="DarkDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">#212121</item>
    </style>

    <style name="DarkMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/black</item>
    </style>

    <style name="AppTheme.Hacker" parent="AppTheme.Dark">
        <item name="colorAccent">@color/lime</item>
        <item name="android:textColor">@color/lime</item>
        <item name="android:textColorPrimary">@color/lime</item>
        <item name="android:textColorSecondary">@color/lime</item>
        <item name="invBlack">@color/lime</item>
        <item name="invWhite_dark">@color/lime</item>
        <item name="colorPrimaryAlt">@color/lime</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1E88E5</item>
        <item name="colorAccent">#66BB6A</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#E53935</item>
        <item name="colorAccent">#4CAF50</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#E91E63</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF8F00</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">#FF8BB4</item>
        <item name="colorPrimaryDark">#EE82A9</item>
        <item name="colorAccent">#A82CFF</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
    </style>

    <!-- Helper styles for activities that modify the action bar -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Hacker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Blue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Red.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Green.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Purple.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Pink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Widget styles -->

    <style name="AppTheme.BorderlessButton" parent="Widget.AppCompat.Button.Borderless.Colored" />

    <style name="AppTheme.ColoredButton" parent="Widget.AppCompat.Button.Colored" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextInputLayoutLight">
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="AppTheme.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?android:attr/colorPrimary</item>
    </style>

</resources>
